Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 90
       , lowerOnStart = True
       , commands = [ Run Weather "EDDH" ["-t","<tempC>Â°C","-L","64","-H","77","--normal","green","--high","red","--low","lightblue"] 36000
